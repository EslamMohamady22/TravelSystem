                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                       
                       

                        <li>

                            @using (Html.BeginForm("SearchItem", "Home", FormMethod.Post))
                            {

                                <input type="text" name="search" placeholder="search for trips.." id="SearchName" class="form-control" />
                            }
                        </li>


                        


                    </ul>
                    <!--patetial login-->
                    @Html.Partial("_login")
