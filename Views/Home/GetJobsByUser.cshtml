        @foreach (var SubItem in Model)
        {
        <div class="col-md-3 thumbnail" style="margin-left: 2px; margin-top: 5px; margin-bottom: 100px; height: 620px; width: 400px; text-align: left ">
            <img style="height:285px; width:390px" src="~/Uploads/@SubItem.job.TripImage" />
