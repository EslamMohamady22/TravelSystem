            <h4>AgencyName : @Html.DisplayFor(modelItem => SubItem.job.AgencyName)</h4>
            <h5>TripDetails : @Html.DisplayFor(modelItem => SubItem.job.TripDetails)</h5>
            <h5>TripDate : @Html.DisplayFor(modelItem => SubItem.job.TripDate)</h5>
            <h5>TripDestination : @Html.DisplayFor(modelItem => SubItem.job.TripDestination)</h5>

            <br />
            
            <hr />
            

            @Html.ActionLink("Details", "Detailse", new { JopId = SubItem.Id }, new { @class = "btn btn-info" })



        </div>


        }

    </div>
</div>

<script>
    $(function () {
        $(".like").click(function () {
            var input = $(this).find('.qty1');
            input.val(parseInt(input.val()) + 1);
        });

        $(".dislike").click(function () {
            var input = $(this).find('.qty2');
            input.val(input.val() - 1);
        });
    });
</script>

